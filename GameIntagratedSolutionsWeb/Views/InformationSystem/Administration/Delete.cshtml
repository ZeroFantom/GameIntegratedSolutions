@model IntelliTrackSolutionsWeb.EFModels.InformationSystem

@{
    ViewData["Title"] = "Удаление игровой платформы";
    Layout = "Layout/_LayoutUserAuth";
    ViewData["Active_IS_Table_Link"] = "active";
}
<div style="padding: 2%">
    <h1>@ViewData["Title"]</h1>

    <div>
        <h4>Игровой платформы</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApiKey)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApiKey)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdInformationSystem"/>
            <input type="submit" value="Удалить" class="btn btn-danger"/>
        </form>
    </div>
</div>
<style>
    h4,h1,label{
        color: firebrick !important;
    }
</style>