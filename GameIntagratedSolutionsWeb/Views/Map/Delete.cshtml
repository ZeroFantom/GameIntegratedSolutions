@model IntelliTrackSolutionsWeb.EFModels.Location

@{
    ViewData["Title"] = "Удаление локации";
    Layout = "Layout/_LayoutUserAuth";
    ViewData["Active_LocationTableData_Link"] = "active";
}

<div style="padding: 2%">
    <h1>@ViewData["Title"]</h1>

    <div>
        <h4>Локация</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Latitude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Latitude)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Longitude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Longitude)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SystemObject)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SystemObject.IdSystemObject)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdLocation"/>
            <input type="hidden" asp-for="SystemObjectId"/>
            <input type="submit" value="Удалить" class="btn btn-danger"/>
        </form>
    </div>
</div>
<style>
    h4,h1,label{
        color: firebrick !important;
    }
</style>